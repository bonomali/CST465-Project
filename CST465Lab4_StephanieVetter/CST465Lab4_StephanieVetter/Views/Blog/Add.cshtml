    ViewBag.Title = "Add a New Blog Post";
}

@model BlogPostModel

<div class="pageContent">
    <h1>Add a New Blog Post</h1>

    @using (Html.BeginForm())
    {
        @Html.EditorForModel()
        <br />
        <button type="submit">Submit</button>
    }
</div>